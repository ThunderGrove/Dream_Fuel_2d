func calcIfNextLevel():
	var nextLevel=level+1
	var xpRequired=0
	var count=0
	while count<nextLevel:
		count+=1
		xpRequired+=count*1000
	if xp>=xpRequired:
		level=nextLevel
		calculate_stats(0)
		calculate_stats(1)
		calculate_stats(2)
		calculate_stats(3)
		calculate_stats(4)
